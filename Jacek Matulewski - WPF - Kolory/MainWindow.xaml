<Window x:Class="Jacek_Matulewski___WPF___Kolory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jacek_Matulewski___WPF___Kolory"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="300" MinWidth="200" KeyDown="Window_KeyDown" Closed="Window_Closed">
    <DockPanel LastChildFill="true">
        <Slider x:Name="sliderB"  Margin="10,10,10,10" DockPanel.Dock="Bottom" ValueChanged="Slider_ValueChanged" Maximum="255"/>
        <Slider x:Name="sliderG" Margin="10,10,10,10" DockPanel.Dock="Bottom" ValueChanged="Slider_ValueChanged" Maximum="255"/>
        <Slider x:Name="sliderR" Margin="10,10,10,10" DockPanel.Dock="Bottom" ValueChanged="Slider_ValueChanged" Maximum="255"/>
        <Rectangle x:Name="Rectangle" Fill="Black"  Margin="10,10,10,10" Stroke="Black" />
    </DockPanel>
</Window>
